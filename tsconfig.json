{
	"compilerOptions": {
		"lib": ["ES2023"],
		"module": "Node16",
		"target": "ES2022",
		"moduleResolution": "Node16",
		"strict": true,
		"declaration": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"outDir": "dist"
	},
	"include": ["src"]
}
